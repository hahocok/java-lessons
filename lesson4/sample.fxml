<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">

    <TextArea fx:id="textOut" editable="false" VBox.vgrow="ALWAYS"/>
    <HBox>
        <TextField fx:id="textIn" onAction="#sendMsg" HBox.hgrow="ALWAYS" promptText="Введите сообщение..."/>
        <Button onAction="#sendMsg" fx:id="button" text="Отправить"/>
    </HBox>
</VBox>

